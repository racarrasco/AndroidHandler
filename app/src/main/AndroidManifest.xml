<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rigo_carrasco.androidthermocycler">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.rigo_carrasco.androidthermocycler.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <provider
            android:name=".CachedFileProvider"
            android:authorities="com.example.rigo_carrasco.androidthermocycler.provider"
            android:exported="true"
            android:grantUriPermissions="true"
            />

        <service
            android:name="com.example.rigo_carrasco.androidthermocycler.UsbService"
            android:enabled="true">
        </service>

        <activity android:name="com.example.rigo_carrasco.androidthermocycler.ParametersScreen"
            android:label="Set Parameters"
            android:theme="@style/AppTheme"/>
        <activity android:name="com.example.rigo_carrasco.androidthermocycler.Controls"
            android:label="Controls"
            android:theme="@style/AppTheme"/>
        <activity android:name="com.example.rigo_carrasco.androidthermocycler.PID"
            android:label="Set PID"
            android:theme="@style/AppTheme"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


    </application>

</manifest>